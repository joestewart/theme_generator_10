{{ attach_library('<%= themeNameMachine %>/accordion') }}

<div class="{{ modifier }}">
  <div class="accordion">
    {% block accordion_items %}
      {% for item in items %}
        {%
          include '@<%= themeNameMachine %>/accordion/accordion-item.twig' with { item: item } only
        %}
      {% endfor %}
    {% endblock %}
  </div>
</div>
