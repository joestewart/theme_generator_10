{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{% block paragraph %}
  {% block content %}
    {% include '@<%= themeNameMachine %>/stats/stats.item.twig' with {
        item: {
          title: content.field_title|field_value,
          summary: content.field_summary|field_value,
          icon: content.field_icon|render ? content.field_icon|render : content.field_custom_icon|render,
        },
        heading_modifier: 'text-light',
      } only
    %}
  {% endblock %}
{% endblock paragraph %}
